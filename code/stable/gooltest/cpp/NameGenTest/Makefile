NameGenTest$(TARGET_EXTENSION): NameGenTest.hpp NameGenTest.cpp
	"$(CXX)" NameGenTest.cpp --std=c++11 -o NameGenTest$(TARGET_EXTENSION)

run: build
	./NameGenTest$(TARGET_EXTENSION) $(RUNARGS)

.PHONY: build run
