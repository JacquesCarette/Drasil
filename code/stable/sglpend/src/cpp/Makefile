ifeq "$(OS)" "Windows_NT"
    TARGET_EXTENSION=.exe
else
    UNAME_S := $(shell uname -s)
    ifeq ($(UNAME_S), Linux)
        TARGET_EXTENSION=
    endif
    ifeq ($(UNAME_S), Darwin)
        TARGET_EXTENSION=
    endif
endif

# Generated by Drasil v0.1-alpha

# Project Name: SglPend

# Project Purpose: Predict the motion of a single pendulum.

build: SglPend$(TARGET_EXTENSION)

SglPend$(TARGET_EXTENSION): InputParameters.hpp OutputFormat.hpp Control.cpp InputParameters.cpp OutputFormat.cpp
	"$(CXX)" Control.cpp InputParameters.cpp OutputFormat.cpp --std=c++11 -o SglPend$(TARGET_EXTENSION)

run: build
	./SglPend$(TARGET_EXTENSION) $(RUNARGS)

doc: doxConfig InputParameters.hpp OutputFormat.hpp Control.cpp
	doxygen doxConfig

.PHONY: build run doc
