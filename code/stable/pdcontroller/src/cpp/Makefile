ifeq "$(OS)" "Windows_NT"
    TARGET_EXTENSION=.exe
else
    UNAME_S := $(shell uname -s)
    ifeq ($(UNAME_S), Linux)
        TARGET_EXTENSION=
    endif
    ifeq ($(UNAME_S), Darwin)
        TARGET_EXTENSION=
    endif
endif

# Generated by Drasil v0.1-alpha

# Project Name: PDController

# Project Purpose: Provide a model of a pd controller that can be used for the
# tuning of the gain constants before the deployment of the controller.

build: PDController$(TARGET_EXTENSION)

PDController$(TARGET_EXTENSION): InputParameters.hpp Constants.hpp Calculations.hpp OutputFormat.hpp Populate.hpp ODE.hpp Control.cpp InputParameters.cpp Constants.cpp Calculations.cpp OutputFormat.cpp Populate.cpp ODE.cpp
	"$(CXX)" Control.cpp InputParameters.cpp Constants.cpp Calculations.cpp OutputFormat.cpp Populate.cpp ODE.cpp --std=c++11 -o PDController$(TARGET_EXTENSION) -I .

run: build
	./PDController$(TARGET_EXTENSION) $(RUNARGS)

doc: doxConfig InputParameters.hpp Constants.hpp Calculations.hpp OutputFormat.hpp Populate.hpp ODE.hpp Control.cpp
	doxygen doxConfig

.PHONY: build run doc
