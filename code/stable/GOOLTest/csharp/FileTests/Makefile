ifeq "$(OS)" "Windows_NT"
    TARGET_EXTENSION=.exe
    CSC=csc
else
    UNAME_S := $(shell uname -s)
    ifeq ($(UNAME_S), Linux)
        TARGET_EXTENSION=
        CSC=mcs
    endif
    ifeq ($(UNAME_S), Darwin)
        TARGET_EXTENSION=
        CSC=mcs
    endif
endif

build: FileTests$(TARGET_EXTENSION)

FileTests$(TARGET_EXTENSION): FileTests.cs
	$(CSC) -out:FileTests$(TARGET_EXTENSION) FileTests.cs

run: build
	./FileTests$(TARGET_EXTENSION) $(RUNARGS)

.PHONY: build run
