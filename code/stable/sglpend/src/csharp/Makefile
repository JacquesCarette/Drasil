ifeq "$(OS)" "Windows_NT"
    TARGET_EXTENSION=.exe
    CSC=csc
else
    UNAME_S := $(shell uname -s)
    ifeq ($(UNAME_S), Linux)
        TARGET_EXTENSION=
        CSC=mcs
    endif
    ifeq ($(UNAME_S), Darwin)
        TARGET_EXTENSION=
        CSC=mcs
    endif
endif

# Generated by Drasil v0.1-alpha

# Project Name: SglPend

# Project Purpose: Predict the motion of a single pendulum.

build: SglPend$(TARGET_EXTENSION)

SglPend$(TARGET_EXTENSION): Control.cs InputParameters.cs OutputFormat.cs
	$(CSC) -out:SglPend$(TARGET_EXTENSION) Control.cs InputParameters.cs OutputFormat.cs

run: build
	./SglPend$(TARGET_EXTENSION) $(RUNARGS)

doc: doxConfig Control.cs InputParameters.cs OutputFormat.cs
	doxygen doxConfig

.PHONY: build run doc
