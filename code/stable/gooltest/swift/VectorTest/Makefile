# Project Name: VectorTest

build: VectorTest$(TARGET_EXTENSION)

VectorTest$(TARGET_EXTENSION): main.swift
	swiftc main.swift -o VectorTest$(TARGET_EXTENSION)

run: build
	./VectorTest$(TARGET_EXTENSION) $(RUNARGS)

.PHONY: build run
