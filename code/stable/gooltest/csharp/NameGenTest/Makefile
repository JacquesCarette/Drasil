ifeq "$(OS)" "Windows_NT"
    TARGET_EXTENSION=.exe
    CSC=csc
else
    UNAME_S := $(shell uname -s)
    ifeq ($(UNAME_S), Linux)
        TARGET_EXTENSION=
        CSC=mcs
    endif
    ifeq ($(UNAME_S), Darwin)
        TARGET_EXTENSION=
        CSC=mcs
    endif
endif

# Generated by Drasil v0.1-alpha

# Project Name: NameGenTest

build: NameGenTest$(TARGET_EXTENSION)

NameGenTest$(TARGET_EXTENSION): NameGenTest.cs
	$(CSC) -out:NameGenTest$(TARGET_EXTENSION) NameGenTest.cs

run: build
	./NameGenTest$(TARGET_EXTENSION) $(RUNARGS)

.PHONY: build run
