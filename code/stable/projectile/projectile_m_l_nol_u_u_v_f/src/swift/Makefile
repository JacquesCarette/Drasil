ifeq "$(OS)" "Windows_NT"
    LIB_EXTENSION=.dll
else
    UNAME_S := $(shell uname -s)
    ifeq ($(UNAME_S), Linux)
        LIB_EXTENSION=.so
    endif
    ifeq ($(UNAME_S), Darwin)
        LIB_EXTENSION=.dylib
    endif
endif

