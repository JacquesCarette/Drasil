# Project Name: Projectile

# Project Purpose: Predict whether a launched projectile hits its target.

build: Projectile$(LIB_EXTENSION)

Projectile$(LIB_EXTENSION): InputParameters.swift Calculations.swift OutputFormat.swift
	swiftc InputParameters.swift Calculations.swift OutputFormat.swift -o Projectile$(LIB_EXTENSION) -emit-library

doc: InputParameters.swift Calculations.swift OutputFormat.swift

.PHONY: build doc
